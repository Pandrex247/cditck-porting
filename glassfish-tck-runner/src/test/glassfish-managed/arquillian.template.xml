<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <engine>
        <!--<property name="deploymentExportPath">target/artifacts</property>-->
        <property name="maxTestClassesBeforeRestart">@maxClassesRestart@</property>
    </engine>
    
    <container qualifier="weld">
        <configuration>
            <!--<property name="enableConversationScope">true</property>-->
            <property name="payaraHome">@payaraHome@</property>
            <property name="adminHost">@adminHost@</property>
            <property name="adminPort">@adminPort@</property>
            <property name="adminUser">@adminUser@</property>
            <property name="adminPassword">@adminPassword@</property>
            <property name="debug">true</property>
            <!-- after adding the fix of the jsf tests failures this property was set to pass some strange behaviour
            from managed profile execution-->
            <property name="allowConnectingToRunningServer">true</property>
        </configuration>
    </container>

</arquillian>
